{
    "manifest_version": 3,
    "name": "头条助手",
    "version": "1.0",
    "description": "复制文章图片，自定义文章小尾巴，链接自动跳转。",
    "permissions": ["contextMenus", "scripting", "tabs", "storage", "tabGroups"],
    "host_permissions": ["https://www.toutiao.com/article/*"],
    "background": {
        "service_worker": "background.js"
    },
    "options_page": "options.html",
    "action": {
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        },
        "default_title": "头条助手设置"
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": ["content-helpers.js"],
            "matches": ["https://www.toutiao.com/*"]
        }
    ]
}
